<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_proker"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:outlineAmbientShadowColor="#28B67E"
        app:civ_border_color="#28B67E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_item_proker"
        android:layout_toRightOf="@+id/img_item_proker"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#0D1321"
            android:text="@string/nama_program_kerja"/>

        <TextView
            android:id="@+id/text_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#636E72"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/deskripsi"/>

    </LinearLayout>


</LinearLayout>